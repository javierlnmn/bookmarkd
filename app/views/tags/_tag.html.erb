<%
  tag_hex = tag.color.presence || "#71717a"
%>

<div
  class="inline-flex items-center gap-3 py-1 px-3.5 rounded-full border transition-all hover:opacity-90 w-fit shrink-0"
  style="background: linear-gradient(135deg, <%= tag_hex %>30 0%, <%= tag_hex %>15 100%); border-color: <%= tag_hex %>;"
>
  <span
    class="text-sm font-semibold truncate bg-clip-text text-transparent"
    style="color: <%= tag_hex %>;"
  >
    <%= tag.name %>
  </span>
  <div class="flex items-center gap-0.5 transition-opacity">
    <button type="button" class="p-1 text-zinc-500 cursor-pointer hover:text-zinc-100 hover:bg-zinc-700/80 rounded-full transition-colors" title="Edit tag" aria-label="Edit tag">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
      </svg>
    </button>
    <button type="button" class="p-1 text-zinc-500 cursor-pointer hover:text-red-400 hover:bg-red-500/20 rounded-full transition-colors" title="Delete tag" aria-label="Delete tag">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    </button>
  </div>
</div>
