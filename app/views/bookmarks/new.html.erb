<%= form_with(
    model: @bookmark,
    url: bookmarks_create_path,
    method: :post,
    data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset turbo:submit-end->modal#close" },
    class: "space-y-6"
  ) do |form| %>
  
  <div class="space-y-2">
    <%= form.label :name, class: "block text-xs font-bold uppercase tracking-widest text-zinc-500 ml-1" %>
    <%= form.text_field :name, 
        placeholder: "e.g. Awesome Inspiration",
        class: "w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3.5 text-white placeholder:text-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500/10 focus:border-orange-500/40 transition-all" %>
  </div>

  <div class="space-y-2">
    <%= form.label :url, class: "block text-xs font-bold uppercase tracking-widest text-zinc-500 ml-1" %>
    <%= form.url_field :url, 
        placeholder: "https://...",
        class: "w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3.5 text-white placeholder:text-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500/10 focus:border-orange-500/40 transition-all" %>
  </div>

  <div class="pt-2">
    <% content_for :modal_footer do %>
      <%= form.submit "Save Bookmark", 
          class: "px-6 py-2.5 bg-zinc-100 hover:bg-white text-zinc-950 font-bold rounded-xl transition-all active:scale-95 cursor-pointer shadow-lg shadow-white/5" %>
    <% end %>
  </div>
<% end %>
