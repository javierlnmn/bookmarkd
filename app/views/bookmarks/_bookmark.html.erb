<div id="<%= dom_id bookmark %>" class="group relative bg-zinc-900/40 hover:bg-zinc-900/80 border border-zinc-800 hover:border-zinc-700 p-5 rounded-2xl transition-all duration-300">
  <div class="flex flex-col gap-4 h-full">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1 min-w-0 flex flex-col gap-1">
        <h3 class="font-bold text-zinc-100 group-hover:text-orange-400 transition-colors flex items-center gap-2">
          <svg class="mt-1 size-4 min-w-4 self-start text-zinc-500 group-hover:text-orange-400 transition-colors self-center" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10.1 14c-1.5-1.5-1.4-4.06.3-5.77l4.8-4.86c1.72-1.74 4.3-1.83 5.8-.32 1.5 1.5 1.4 4.06-.3 5.78l-2.4 2.43" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M13.9 10c1.5 1.5 1.4 4.06-.3 5.77l-4.8 4.86c-1.72 1.74-4.3 1.83-5.8.32-1.5-1.5-1.4-4.06.3-5.78l2.4-2.43" />
          </svg>
          <%= bookmark.name %>
        </h3>
        <div class="flex items-end gap-1 relative">
          <p class="text-xs font-medium text-zinc-500 whitespace-nowrap truncate leading-tight">
            <% if bookmark.description.blank? %>
              No description
            <% else %>
              <%= bookmark.description %>
            <% end %>
          </p>
          <% unless bookmark.description.blank? %>
            <div data-controller="dropdown" class="flex flex-col justify-center group/info">
              <button data-action="dropdown#toggle" data-dropdown-target="button" >
                <svg class="w-4 h-4 text-zinc-500 group-hover/info:text-orange-400 transition-colors duration-200 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Information">
                  <circle cx="12" cy="12" r="10" stroke-width="2"/>
                  <line x1="12" y1="16" x2="12" y2="12" stroke-width="2" stroke-linecap="round"/>
                  <line x1="12" y1="8" x2="12" y2="8" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </button>
              <p data-dropdown-target="list" class="hidden absolute top-[calc(100%+4px)] right-0 left-0 w-full text-sm text-zinc-300 bg-zinc-800 border border-zinc-700 rounded-2xl p-2 shadow-2xl z-50">
                <%= bookmark.description %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
      
      <a href="<%= bookmark.url %>" target="_blank" class="p-2.5 bg-zinc-800/50 text-zinc-400 hover:text-white hover:bg-zinc-700 rounded-xl transition-all active:scale-90">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
      </a>
    </div>

    <div class="mt-auto flex items-center gap-2 mt-auto">
      <div data-controller="dropdown" class="flex flex-wrap gap-2 relative">
        <% bookmark.tags.each do |tag| %>
          <%= render "tags/bookmark_tag", bookmark: bookmark, tag: tag %>
        <% end %>
        <button type="button" id="<%= dom_id bookmark %>-tags-button" data-action="click->dropdown#toggle" class="size-7 text-base font-bold uppercase tracking-widest text-zinc-400 hover:text-zinc-300 transition-colors bg-zinc-800/30 rounded-lg border border-zinc-800/50 flex items-center justify-center cursor-pointer">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        </button>

        <% if Current.user.present? %>
          <div data-dropdown-target="list" class="hidden absolute left-0 top-full mt-1 min-w-[140px] py-1 bg-zinc-800 border border-zinc-700 rounded-xl shadow-xl z-50">
            <div class="flex flex-col gap-2 p-2 max-h-70 overflow-scroll" data-tag-choices-container="true">
              <% Current.user.tags.order(:name).each do |tag| %>
                <%= button_to tag_bookmark_path(bookmark, tag), method: :post do %>
                  <%= render "tags/simple_tag", tag: tag, bookmark: bookmark %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="ml-auto flex gap-1 items-center">
        <% if Current.user.present? && (!@folder || @folder.user_id == Current.user.id) %>
          <%= link_to edit_bookmark_path(bookmark), data: { turbo_frame: 'modal' }, class: "p-2 text-zinc-500 hover:text-zinc-100 hover:bg-zinc-800 rounded-xl transition-all active:scale-90 cursor-pointer", title: "Edit" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
          <% end %>
          
          <%= button_to bookmark_path(bookmark), method: :delete, data: { turbo_confirm: "Are you sure about that?" }, class: "p-2 text-zinc-500 hover:text-red-400 hover:bg-red-500/10 rounded-xl transition-all active:scale-90 cursor-pointer" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
